CC = c++
CFLAGS = -Wall -Wextra -Werror -std=c++98
NAME =  Brain
SRC =	main.cpp\
		Animal.cpp\
		Dog.cpp\
		Cat.cpp\
		WrongCat.cpp\
		WrongAnimal.cpp\
		Brain.cpp

OBJ = ${SRC:.cpp=.o}

all: $(NAME)

$(NAME):	$(OBJ)
			${CC} ${CFLAGS} ${OBJ} -o ${NAME}
clean:
			rm -f ${OBJ}
fclean:		clean
			rm -f ${NAME}
re:			fclean all

.PHONY:		all clean fclean re